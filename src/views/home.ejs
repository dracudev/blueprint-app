<%- include('partials/head') %>
<link rel="stylesheet" href="/styles/home.css" />
<%- include('partials/header') %>

<main class="home-main">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">
          Smart Web Development <span class="gradient-text">Budgeting</span>
        </h1>
        <p class="hero-subtitle">
          Take control of your web development costs with real-time project
          estimation, transparent pricing, and data-driven insights that keep
          your budget on track.
        </p>
        <div class="hero-actions">
          <% if (!user) { %>
          <a href="/auth/signup" class="btn btn-primary btn-lg">
            <i class="fas fa-rocket"></i>
            Get Started Free
          </a>
          <a href="/auth/login" class="btn btn-outline btn-lg">
            <i class="fas fa-sign-in-alt"></i>
            Sign In
          </a>
          <% } else { %>
          <a href="/dashboard" class="btn btn-primary btn-lg">
            <i class="fas fa-chart-pie"></i>
            View Dashboard
          </a>
          <a href="/projects/new" class="btn btn-outline btn-lg">
            <i class="fas fa-plus"></i>
            New Project
          </a>
          <% } %>
        </div>
      </div>
      <div class="hero-visual">
        <div class="cost-calculator-preview">
          <div class="preview-header">
            <div class="preview-title">Project Estimate</div>
            <div class="preview-status live">
              <span class="status-dot"></span>
              Live Update
            </div>
          </div>
          <div class="preview-metrics">
            <div class="metric">
              <span class="metric-value">$4,250</span>
              <span class="metric-label">Total Cost</span>
            </div>
            <div class="metric">
              <span class="metric-value">6.5</span>
              <span class="metric-label">Weeks</span>
            </div>
            <div class="metric">
              <span class="metric-value">85%</span>
              <span class="metric-label">Accuracy</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

</div>
</body>
</html>