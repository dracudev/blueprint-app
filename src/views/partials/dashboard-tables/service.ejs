<section class="dashboard-section" data-tab="services">
  <div class="dashboard-table-header">
    <h2>Services</h2>
    <% if (user.role === 'admin' && user.canCreateServices) { %>
    <a
      href="/dashboard?action=create&entity=service&tab=services"
      class="btn btn-primary btn-md"
      >Add New Service</a
    >
    <% } %>
  </div>
  <table class="dashboard-table dashboard-table-main">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% services.forEach(s => { %>
      <tr>
        <td><%= s.serviceName %></td>
        <td><%= s.description || 'No description' %></td>
        <td><%= parseFloat(s.price).toLocaleString() %>â‚¬</td>
        <td>
          <% if (user.role === 'admin') { %>
          <div class="actions">
            <% if (user.canEditServices) { %>
            <a
              href="/dashboard?action=edit&entity=service&id=<%= s.serviceId %>&tab=services"
              class="btn btn-secondary btn-sm crud-btn"
              data-action="edit"
              data-entity="service"
              data-id="<%= s.serviceId %>"
              >Edit</a
            >
            <% } %> <% if (user.canDeleteServices) { %>
            <button
              type="button"
              class="btn btn-danger btn-sm crud-btn"
              data-action="delete"
              data-entity="service"
              data-id="<%= s.serviceId %>"
            >
              Delete
            </button>
            <% } %>
          </div>
          <% } %>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>
