<section class="dashboard-section" data-tab="services">
  <div class="dashboard-table-header">
    <h2>Services</h2>
    <% if (user.role === 'admin' && user.canCreateProducts) { %>
    <a
      href="/dashboard?action=create&entity=service&tab=services"
      class="btn btn-primary btn-md"
      >Add New Service</a
    >
    <% } %>
  </div>
  <table class="dashboard-table dashboard-table-main">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% services.forEach(s => { %>
      <tr>
        <td><%= s.serviceName %></td>
        <td><%= s.description || 'No description' %></td>
        <td>$<%= parseFloat(s.price).toFixed(2) %></td>
        <td>
          <% if (user.role === 'admin') { %> <% if (user.canEditProducts) { %>
          <a
            href="/dashboard?action=edit&entity=service&id=<%= s.serviceId %>&tab=services"
            class="btn btn-secondary btn-md"
            >Edit</a
          >
          <% } %> <% if (user.canDeleteProducts) { %>
          <a
            href="/dashboard?action=delete&entity=service&id=<%= s.serviceId %>&tab=services"
            class="btn btn-danger btn-md"
            onclick="return confirm('Are you sure you want to delete this service?');"
          >
            Delete
          </a>
          <% } %> <% } %>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>
