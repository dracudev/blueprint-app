<section class="dashboard-section" data-tab="projects">
  <div class="dashboard-table-header">
    <h2>Projects</h2>
    <% if ((user.role === 'admin' && user.canCreateOrders) || (user.role ===
    'client')) { %>
    <a
      href="/dashboard?action=create&entity=project&tab=projects"
      class="btn btn-primary btn-md"
      >Add New Project</a
    >
    <% } %>
  </div>
  <table class="dashboard-table dashboard-table-main">
    <thead>
      <tr>
        <th>Project ID</th>
        <th>Client</th>
        <th>Status</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% projects.forEach(p => { %>
      <tr>
        <td><%= p.projectId %></td>
        <td>
          <% if (p.client) { %> <% if (p.client.isCompany) { %> <%=
          p.client.companyName %> <% } else { %> <%= p.client.firstName %> <%=
          p.client.lastName %> <% } %> <% } else { %> N/A <% } %>
        </td>
        <td>
          <% if (p.jobStatus) { %> <%= p.jobStatus.charAt(0) +
          p.jobStatus.slice(1).toLowerCase().replace('_', ' ') %> <% } else { %>
          N/A <% } %>
        </td>
        <td><%= p.totalAmount %>â‚¬</td>
        <td>
          <% if (user.role === 'admin') { %> <% if (user.canEditOrders) { %>
          <a
            href="/dashboard?action=edit&entity=project&id=<%= p.projectId %>&tab=projects"
            class="btn btn-secondary btn-md"
            >Edit</a
          >
          <% } %> <% if (user.canDeleteOrders) { %>
          <button
            type="button"
            class="btn btn-danger btn-md"
            data-action="delete"
            data-entity="project"
            data-id="<%= p.projectId %>"
          >
            Delete
          </button>
          <% } %> <% } %> <% if (user.role === 'client') { %>
          <a href="/project/view/<%= p.projectId %>" class="btn btn-info btn-md"
            >View</a
          >
          <a
            href="/project/payment/<%= p.projectId %>"
            class="btn btn-success btn-md"
            >View Payment</a
          >
          <% } %>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>
