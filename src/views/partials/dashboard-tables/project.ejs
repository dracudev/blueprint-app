<% /* project.ejs - Projects table partial for dashboard */ %>
<section class="dashboard-section" data-tab="projects">
  <div class="dashboard-table-header">
    <h2>Projects</h2>
    <% if ((user.role === 'admin' && user.canCreateOrders) || (user.role ===
    'client')) { %>
    <a
      href="/project/create"
      class="crud-btn btn-primary"
      data-action="create"
      data-entity="project"
      >Add New Project</a
    >
    <% } %>
  </div>
  <table class="dashboard-table dashboard-table-main">
    <thead>
      <tr>
        <th>Project ID</th>
        <th>Client</th>
        <th>Status</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% projects.forEach(p => { %>
      <tr>
        <td><%= p.project_id %></td>
        <td><%= p.client_name %></td>
        <td><%= p.job_status %></td>
        <td><%= p.total_amount %></td>
        <td>
          <% if (user.role === 'admin') { %> <% if (user.canEditOrders) { %>
          <a
            href="/project/edit/<%= p.project_id %>"
            class="crud-btn btn-secondary"
            data-action="edit"
            data-entity="project"
            data-id="<%= p.project_id %>"
            >Edit</a
          >
          <% } %> <% if (user.canDeleteOrders) { %>
          <button
            type="button"
            class="crud-btn btn-danger"
            data-action="delete"
            data-entity="project"
            data-id="<%= p.project_id %>"
          >
            Delete
          </button>
          <% } %>
          <a
            href="/project/status/<%= p.project_id %>"
            class="crud-btn btn-info"
            >Change Status</a
          >
          <a
            href="/project/payment/<%= p.project_id %>"
            class="crud-btn btn-success"
            >Update Payment</a
          >
          <% } %> <% if (user.role === 'client') { %>
          <a href="/project/view/<%= p.project_id %>" class="crud-btn btn-info"
            >View</a
          >
          <a
            href="/project/payment/<%= p.project_id %>"
            class="crud-btn btn-success"
            >View Payment</a
          >
          <% } %>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>
