<section class="dashboard-section" data-tab="projects">
  <div class="dashboard-table-header">
    <h2>Projects</h2>
    <% if ((user.role === 'admin' && user.canCreateProjects) || (user.role ===
    'client')) { %>
    <a
      href="/dashboard?action=create&entity=project&tab=projects"
      class="btn btn-primary btn-md"
      >Add New Project</a
    >
    <% } %>
  </div>
  <table class="dashboard-table dashboard-table-main">
    <thead>
      <tr>
        <th>Project ID</th>
        <% if (user.role !== 'client') { %>
        <th>Client</th>
        <% } %>
        <th>Services</th>
        <th>Status</th>
        <th>Total</th>
        <th>Paid</th>
        <% if (user.role === 'admin') { %>
        <th>Actions</th>
        <% } %>
      </tr>
    </thead>
    <tbody>
      <% projects.forEach(p => { %>
      <tr>
        <td>
          <a href="/project/<%= p.projectId %>" class="project-id-link">
            #<%= p.projectId %>
          </a>
        </td>
        <% if (user.role !== 'client') { %>
        <td>
          <% if (p.client) { %> <% if (p.client.isCompany) { %> <%=
          p.client.companyName %> <% } else { %> <%= p.client.firstName %> <%=
          p.client.lastName %> <% } %> <% } else { %> N/A <% } %>
        </td>
        <% } %>
        <td>
          <% if (p.projectItems && p.projectItems.length > 0) { %>
          <div class="project-services-column">
            <% p.projectItems.forEach((item) => { %>
            <div class="service-item-row">
              <% if (item.service && item.service.serviceId) { %>
              <a
                href="/service/<%= item.service.serviceId %>"
                class="service-link"
              >
                <%= item.service.serviceName %>
              </a>
              <% } else { %> Unknown Service <% } %>
              <small>(x<%= item.quantity %>)</small>
            </div>
            <% }) %>
          </div>
          <% } else { %>
          <span class="text-muted">No services</span>
          <% } %>
        </td>
        <td>
          <% if (p.jobStatus) { %> <%= p.jobStatus.charAt(0) +
          p.jobStatus.slice(1).toLowerCase().replace('_', ' ') %> <% } else { %>
          N/A <% } %>
        </td>
        <td><%= p.totalAmount %>€</td>
        <td><%= p.paidAmount || 0 %>€</td>
        <% if (user.role === 'admin') { %>
        <td>
          <div class="actions">
            <% if (user.canEditProjects) { %>
            <a
              href="/dashboard?action=edit&entity=project&id=<%= p.projectId %>&tab=projects"
              class="btn btn-secondary btn-sm crud-btn"
              data-action="edit"
              data-entity="project"
              data-id="<%= p.projectId %>"
              >Edit</a
            >
            <% } %> <% if (user.canDeleteProjects) { %>
            <button
              type="button"
              class="btn btn-danger btn-sm crud-btn"
              data-action="delete"
              data-entity="project"
              data-id="<%= p.projectId %>"
            >
              Delete
            </button>
            <% } %>
          </div>
        </td>
        <% } %>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>
