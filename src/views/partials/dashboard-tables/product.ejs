<% /* service.ejs - Services table partial for dashboard */ %>
<section class="dashboard-section" data-tab="services">
  <div class="dashboard-table-header">
    <h2>Services</h2>
    <% if (user.canCreateProducts) { %>
    <a
      href="/service/create"
      class="crud-btn btn-primary"
      data-action="create"
      data-entity="service"
      >Add New Service</a
    >
    <% } %>
  </div>
  <table class="dashboard-table dashboard-table-main">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% services.forEach(s => { %>
      <tr>
        <td><%= s.service_name %></td>
        <td>
          <% if (user.canEditProducts) { %>
          <a
            href="/service/edit/<%= s.service_id %>"
            class="crud-btn btn-secondary"
            data-action="edit"
            data-entity="service"
            data-id="<%= s.service_id %>"
            >Edit</a
          >
          <% } %> <% if (user.canDeleteProducts) { %>
          <button
            type="button"
            class="crud-btn btn-danger"
            data-action="delete"
            data-entity="service"
            data-id="<%= s.service_id %>"
          >
            Delete
          </button>
          <% } %>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</section>
